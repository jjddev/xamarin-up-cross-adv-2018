<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinUP2018.Views.Detail">
    <NavigationPage.TitleView>
        <Label Text="Detalhes" TextColor="White"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding PosterPath}" />

            <Label Text="{Binding Title}" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="{Binding movie.Title}" FontAttributes="Bold" />
            <Label Text="{Binding Movie.Title}" FontAttributes="Bold" />
            <Label Text="{Binding oi}"/>
            <Label Text="TESTE"/>
            <Button Text="FAVORITAR" WidthRequest="200" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>